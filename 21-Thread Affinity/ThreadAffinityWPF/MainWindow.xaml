<Window x:Class="ThreadAffinityWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ThreadAffinityWPF"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Label Content="" Name="LblMessage" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,20,0,0" />
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Bottom"
                    Margin="0,0,0,20">
            <Button Content="Within the main thread" Name="Button1" Click="Button1_OnClick" Margin="10,0" />
            <Button Content="In another thread" Name="Button2" Click="Button2_OnClick" Width="100" Margin="10,0" />
        </StackPanel>
    </Grid>
</Window>